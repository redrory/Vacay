<%= simple_form_for @user do |f| %>

  <div class="field">
    <%= f.input :name %>
  </div>
  <div class="field">
    <%= f.input :email %>
  </div>
 <div class="field">
    <%= f.input :company %>
  </div>
  <div class="field">
    <%= f.input :password %>
  </div>
  <div class="field">
    <%= f.input :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

