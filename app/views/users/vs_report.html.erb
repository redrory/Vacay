<h2><%= @user.company %> Vacation VS Sick Days Report</h2>

<div id="reports">
	<table border="1">
	  <tr>
	    <th>Name</th>
	    <th>Vacay Days Taken</th>
		<th>Vacay Days Left</th>
		<th>Sick Days Taken</th>
		<th>Sick Days Left</th>
		
	  </tr>
	<% @vacayUCount = 0 
	   @vacayTCount = 0
	   @sickUCount = 0
	   @sickTCount = 0
	 %>
	
	
		<% @employees.each do |vacay| %>
	  <tr>
	    <td><%= vacay.name %></td>
	    <td><%= vacay.vacayUsed %></td> <% @vacayUCount = @vacayUCount + vacay.vacayUsed %>
		<td> <% @vacaySum = vacay.vacayTotal - vacay.vacayUsed %> <%=@vacaySum %>
			
			<% if @vacaySum >= 0 %>
			<% @vacayTCount = @vacayTCount + @vacaySum %>
			<% else %>
			*
			<% end %>
			
		<td><%= vacay.sickUsed %></td> <% @sickUCount = @sickUCount + vacay.sickUsed %>
		<td> <% @sickSum = vacay.sickTotal - vacay.sickUsed %> <%= @sickSum %> 
			
			<% if @sickSum >= 0 %>
			<% @sickTCount = @sickTCount + @sickSum %>
			<% else %>
			*
			<% end %>
			

			<%end%>
			
	   </td>
	  </tr></td> 
	
	<tr>
		<th>Total</th>
		<th><%= @vacayUCount%></th>
		<th><%= @vacayTCount%></th>	
		<th><%= @sickUCount%></th>
		<th><%= @sickTCount%></th>
	</tr>
	</table>



</div>	
	

